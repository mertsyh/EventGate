@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Organizer Login - EventGate</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body style="background: #f4f4f4; display: flex; align-items: center; justify-content: center; height: 100vh;">

    <div class="login-container" style="background: white; padding: 40px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); width: 100%; max-width: 400px; text-align: center;">
        <h2 style="color: #d22; margin-bottom: 20px;">Organizer Login</h2>
        
        @using (Html.BeginForm("Login", "Organizer", FormMethod.Post))
        {
            <div style="margin-bottom: 15px; text-align: left;">
                <label>Email</label>
                <input type="email" name="email" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;" required />
            </div>
            
            <div style="margin-bottom: 20px; text-align: left;">
                <label>Password</label>
                <input type="password" name="password" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;" required />
            </div>
            
            if (ViewBag.Error != null)
            {
                <p style="color: red; font-size: 0.9em;">@ViewBag.Error</p>
            }
            
            <button type="submit" style="background: #d22; color: white; border: none; padding: 12px; width: 100%; border-radius: 5px; font-weight: bold; cursor: pointer;">Login</button>
        }
        
        <p style="margin-top: 15px; font-size: 0.9em;">
            <a href="@Url.Action("Index", "Home")">Back to Home</a>
        </p>
    </div>

</body>
</html>

