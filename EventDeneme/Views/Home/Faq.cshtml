
@{
    ViewBag.Title = "Faq";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .faq-section {
        padding: 60px 20px;
        max-width: 900px;
        margin: 40px auto;
        background: rgba(255, 255, 255, 0.42);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(13.4px);
        -webkit-backdrop-filter: blur(13.4px);
        border: 1px solid rgba(255, 255, 255, 0.73);
        border-radius: 12px;
        color: #333;
    }

    .faq-content {
        min-height: 100px;
    }

    .accordion {
        background: white;
        border-radius: 12px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
        overflow: hidden;
        transition: background 0.3s ease;
    }

    .accordion-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        cursor: pointer;
        font-weight: 600;
        font-size: 18px;
        transition: background 0.3s ease;
    }

        .accordion-header:hover {
            background: #f8f8f8;
        }

    .accordion-icon {
        font-size: 20px;
        transition: transform 0.3s ease;
    }

    .accordion-content {
        max-height: 0;
        overflow: hidden;
        color: #333;
        font-size: 16px;
        padding: 0 20px;
        line-height: 1.6;
        opacity: 0;
        transform: translateY(-5px);
        transition: all 0.4s ease;
    }

    .accordion.active .accordion-content {
        max-height: 500px;
        opacity: 1;
        transform: translateY(0);
        padding: 15px 20px 20px;
    }

    .accordion.active .accordion-icon {
        transform: rotate(180deg);
    }


    .faq-content h1 {
        text-align: center;
    }
</style>
<section class="faq-section">
    <div class="faq-content">
        <h1>FAQ</h1>
    </div>

    <div class="accordion active">
        <div class="accordion-header">
            How do I get my ticket?
            <span class="accordion-icon">−</span>
        </div>
        <div class="accordion-content" style="max-height:200px;">
            Tickets are sent to your email right after payment. You can also download them from the confirmation page.
        </div>
    </div>

    <div class="accordion">
        <div class="accordion-header">
            Can I show the ticket on my phone?
            <span class="accordion-icon">+</span>
        </div>
        <div class="accordion-content">
            Yes, you can enter the event by showing the QR code on your phone screen.
        </div>
    </div>

    <div class="accordion">
        <div class="accordion-header">
            Can I cancel or change my ticket?
            <span class="accordion-icon">+</span>
        </div>
        <div class="accordion-content">
            Yes, you can cancel your ticket but you cant change it.
        </div>
    </div>

    <div class="accordion">
        <div class="accordion-header">
            What if the event is canceled?
            <span class="accordion-icon">+</span>
        </div>
        <div class="accordion-content">
            If an event is canceled, you’ll automatically receive a full refund within a few days.
        </div>
    </div>
    </div>
</section>

<script>
    document.querySelector('.SearchArea1 i').addEventListener('click', function () {
        const parent = this.parentElement;
        parent.classList.toggle('active');
    });
</script>

<script>
    const accordions = document.querySelectorAll(".accordion");

    accordions.forEach((acc) => {
        const header = acc.querySelector(".accordion-header");
        const content = acc.querySelector(".accordion-content");
        const icon = acc.querySelector(".accordion-icon");

        header.addEventListener("click", () => {
            const isActive = acc.classList.contains("active");

            accordions.forEach((other) => {
                if (other !== acc) {
                    other.classList.remove("active");
                    other.querySelector(".accordion-content").style.maxHeight = null;
                    other.querySelector(".accordion-icon").textContent = "+";
                }
            });
            if (isActive) {
                acc.classList.remove("active");
                content.style.maxHeight = null;
                icon.textContent = "+";
            } else {
                acc.classList.add("active");
                content.style.maxHeight = content.scrollHeight + "px";
                icon.textContent = "−";
            }
        });
    });
</script>