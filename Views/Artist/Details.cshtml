@model List<EventDeneme.Models.events>
@{
    ViewBag.Title = ViewBag.ArtistName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding: 40px 20px;">
    <h1>@ViewBag.ArtistName</h1>
    <hr />
    
    <h3>Upcoming Events</h3>
    
    @if (Model.Any())
    {
        <div class="events-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
             @foreach (var item in Model)
             {
                 <!-- Reuse basic card style -->
                 <div class="event-card" style="width: 250px; border: 1px solid #ddd; padding: 10px; border-radius: 8px;">
                     <img src="@item.poster_url" style="width:100%; height: 150px; object-fit: cover; border-radius: 4px;" />
                     <h4>@item.title</h4>
                     <a href="@Url.Action("Details", "Event", new { id = item.id })" class="btn btn-primary btn-sm">View Event</a>
                 </div>
             }
        </div>
    }
    else
    {
        <p>No upcoming events found for this artist.</p>
    }
</div>

