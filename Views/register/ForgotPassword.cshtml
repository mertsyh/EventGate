@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Forgot Password - EventGate</title>
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body style="display:flex; justify-content:center; align-items:center; height:100vh; background:#f4f4f4;">
    <div style="background:white; padding:40px; border-radius:10px; box-shadow:0 4px 15px rgba(0,0,0,0.1); width:100%; max-width:400px; text-align:center;">
        <h2 style="color:#d22; margin-bottom:20px;">Forgot Password</h2>
        
        @if (ViewBag.Message != null)
        {
            <div style="background:#d4edda; color:#155724; padding:10px; border-radius:5px; margin-bottom:15px;">
                @ViewBag.Message
            </div>
            <a href="@Url.Action("Signin", "Register")" style="color:#d22; font-weight:bold;">Return to Login</a>
        }
        else
        {
            using (Html.BeginForm("ForgotPassword", "Register", FormMethod.Post))
            {
                <p style="margin-bottom:20px; color:#666;">Enter your email address to reset your password.</p>
                
                <div style="margin-bottom:15px; text-align:left;">
                    <input type="email" name="Email" placeholder="Enter your email" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:5px;" required />
                </div>

                if (ViewBag.Error != null)
                {
                    <p style="color:red; margin-bottom:15px;">@ViewBag.Error</p>
                }

                <button type="submit" style="width:100%; padding:12px; background:#d22; color:white; border:none; border-radius:5px; font-weight:bold; cursor:pointer;">Reset Password</button>
            }
            
            <p style="margin-top:15px;">
                <a href="@Url.Action("Signin", "Register")" style="color:#666; text-decoration:none;">Back to Login</a>
            </p>
        }
    </div>
</body>
</html>

