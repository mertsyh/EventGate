@model EventDeneme.Models.events
@{
    ViewBag.Title = "Edit Event";
    Layout = "~/Views/Shared/_OrganizerLayout.cshtml";
}

<div class="container" style="padding: 40px 20px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>Edit Event - @Model.title</h2>
        <a href="@Url.Action("Dashboard", "Organizer")" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    @using (Html.BeginForm("EditEvent", "Organizer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", Model.id)

        <div class="form-group">
            <label>Title*</label>
            <input type="text" name="Title" value="@Model.title" required />
        </div>

        <div class="form-group">
            <label>Category*</label>
            <select name="categoryId" required>
                @foreach (var c in (IEnumerable<EventDeneme.Models.categories>)ViewBag.Categories)
                {
                    <option value="@c.id" @(c.id == Model.category_id ? "selected" : "")>@c.display_name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea name="Description" rows="4">@Model.description</textarea>
        </div>

        <div class="form-group">
            <label>Language</label>
            <input type="text" name="Language" value="@Model.language" />
        </div>

        <div class="form-group">
            <label>Age Limit</label>
            <input type="text" name="AgeLimit" value="@Model.age_limit" />
        </div>

        <div class="form-group">
            <label>Poster URL</label>
            <input type="text" name="PosterUrl" value="@Model.poster_url" />
        </div>

        <button type="submit" class="btn btn-primary" style="margin-top:10px;">Save Changes</button>
    }
</div>




