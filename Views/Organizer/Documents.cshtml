@model List<EventDeneme.Models.organizer_documents>
@{
    ViewBag.Title = "Organizer Documents";
    Layout = "~/Views/Shared/_OrganizerLayout.cshtml";
}

<div class="flex flex-col gap-4">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-[#181111] dark:text-white">Organizer Documents</h2>
        <a href="@Url.Action("Dashboard", "Organizer")"
           class="inline-flex items-center rounded-lg border border-gray-300 px-3 py-1.5 text-sm font-medium text-[#181111] hover:bg-gray-50 dark:border-gray-600 dark:text-gray-100 dark:hover:bg-[#333]">
            Back to Dashboard
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="overflow-x-auto rounded-xl border border-gray-200 dark:border-[#333] bg-white dark:bg-[#181818]">
            <table class="min-w-full text-sm">
                <thead class="bg-gray-50 dark:bg-[#222]">
                    <tr>
                        <th class="px-4 py-3 text-left font-semibold text-gray-700 dark:text-gray-200">Type</th>
                        <th class="px-4 py-3 text-left font-semibold text-gray-700 dark:text-gray-200">File</th>
                        <th class="px-4 py-3 text-left font-semibold text-gray-700 dark:text-gray-200">Uploaded At</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-[#333]">
                    @foreach (var doc in Model)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-[#222]">
                            <td class="px-4 py-3">@doc.doc_type</td>
                            <td class="px-4 py-3">
                                <a href="@doc.file_url" target="_blank" class="text-sm font-medium text-primary hover:underline">Download</a>
                            </td>
                            <td class="px-4 py-3">
                                @(doc.uploaded_at.HasValue
                                    ? doc.uploaded_at.Value.ToString("dd MMM yyyy HH:mm")
                                    : "N/A")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-sm text-[#886364] dark:text-gray-400">No documents found.</p>
    }
</div>

