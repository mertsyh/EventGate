@model List<EventDeneme.Models.events>
@{
    ViewBag.Title = "Organizer Dashboard";
    Layout = "~/Views/Shared/_OrganizerLayout.cshtml";
}

<div class="container" style="padding: 40px 20px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>Organizer Dashboard</h2>
        <div style="display:flex; gap:10px;">
            <a href="@Url.Action("Applications", "Organizer")" class="btn btn-secondary">My Applications</a>
            <a href="@Url.Action("Documents", "Organizer")" class="btn btn-secondary">My Documents</a>
            <a href="@Url.Action("Logout", "Organizer")" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <div class="stats" style="display: flex; gap: 20px; margin-bottom: 30px;">
        <div class="stat-card" style="background: #f8f9fa; padding: 20px; border-radius: 8px; flex: 1; text-align: center; border: 1px solid #ddd;">
            <h3>@Model.Count</h3>
            <p>Active Events</p>
        </div>
        <div class="stat-card" style="background: #f8f9fa; padding: 20px; border-radius: 8px; flex: 1; text-align: center; border: 1px solid #ddd;">
            <h3>0</h3>
            <p>Total Tickets Sold</p>
        </div>
        <div class="stat-card" style="background: #f8f9fa; padding: 20px; border-radius: 8px; flex: 1; text-align: center; border: 1px solid #ddd;">
            <h3>0.00 â‚º</h3>
            <p>Total Revenue</p>
        </div>
    </div>

    <h3>My Events</h3>
    @if (Model.Any())
    {
        <table class="table" style="width: 100%; border-collapse: collapse; margin-top: 15px;">
            <thead>
                <tr style="background: #eee;">
                    <th style="padding: 10px; text-align: left;">Title</th>
                    <th style="padding: 10px; text-align: left;">Category</th>
                    <th style="padding: 10px; text-align: left;">Status</th>
                    <th style="padding: 10px; text-align: left;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evt in Model)
                {
                    <tr style="border-bottom: 1px solid #ddd;">
                        <td style="padding: 10px;">@evt.title</td>
                        <td style="padding: 10px;">@(evt.category_id)</td>
                        <td style="padding: 10px;">Active</td>
                        <td style="padding: 10px;">
                            <a href="#" class="btn btn-sm btn-primary">Edit</a>
                            <a href="@Url.Action("Details", "Event", new { id = evt.id })" target="_blank" class="btn btn-sm btn-secondary">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>You have no events created yet.</p>
    }
</div>

