@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>EventGate | Organizer Register</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/register.css")">
</head>
<body>

    <div class="container">

        <div class="slider">
            <a href="/">
                <img class="headerlogo" src="@Url.Content("~/images/logo.png")" />
            </a>

            <div class="slide active" style="background-image: url('@Url.Content("~/images/sebnemferah.jpg")');"></div>
            <div class="slide" style="background-image: url('@Url.Content("~/images/cinema.jpg")');"></div>
            <div class="slide" style="background-image: url('@Url.Content("~/images/theater.jpg")');"></div>

            <div class="text">
                <h1>Become an organizer and manage your own events.</h1>
            </div>
        </div>

        <div class="right">
            <div class="form-box">
                <h1>Organizer Registration</h1>

                @using (Html.BeginForm("Register", "Organizer", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <label>Legal Company Name*</label>
                    <input type="text" name="LegalName" placeholder="Enter your legal company name" required>

                    <label>Brand Name*</label>
                    <input type="text" name="BrandName" placeholder="Brand / public name" required>

                    <label>Contact Email*</label>
                    <input type="email" name="ContactEmail" placeholder="Enter contact email" required>

                    <label>Contact Phone</label>
                    <input type="tel" name="ContactPhone" placeholder="+90 5xx xxx xx xx">

                    <hr />

                    <label>Username*</label>
                    <input type="text" name="Username" placeholder="Choose a username" required>

                    <label>Password*</label>
                    <input type="password" name="Password" placeholder="Create a password" required>

                    <button type="submit" class="btn-primary">Submit Application</button>
                }

                @if (ViewBag.Error != null)
                {
                    <p style="color:red">@ViewBag.Error</p>
                }

                @if (TempData["Success"] != null)
                {
                    <p style="color:green">@TempData["Success"]</p>
                }

                <div class="footer-text">
                    Already an organizer?
                    <a href="@Url.Action("Login", "Organizer")">Login</a>
                </div>

            </div>
        </div>
    </div>

    <script>
        const slides = document.querySelectorAll('.slide');
        let index = 0;

        setInterval(() => {
            slides[index].classList.remove('active');
            index = (index + 1) % slides.length;
            slides[index].classList.add('active');
        }, 4000);
    </script>

</body>
</html>


