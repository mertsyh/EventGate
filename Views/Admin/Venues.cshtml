@model List<EventDeneme.Models.venues>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Manage Venues";
}

<h2>Manage Venues</h2>

<p>
    <a href="@Url.Action("CreateVenue", "Admin")" class="btn btn-primary">Add Venue</a>
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" style="background-color: #d4edda; color: #155724; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
        @TempData["Success"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Has Seating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.address</td>
                <td>@(item.cities != null ? item.cities.name : "N/A")</td>
                <td>@(item.has_seating ? "Yes" : "No")</td>
                <td>
                    @Html.ActionLink("Edit", "EditVenue", "Admin", new { id = item.id }, null)
                    <span> | </span>
                    @using (Html.BeginForm("DeleteVenue", "Admin", new { id = item.id }, FormMethod.Post, new { style = "display:inline;", onsubmit = "return confirm('Are you sure you want to delete this venue?');" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" style="background:none; border:none; color:#d22; cursor:pointer; text-decoration:underline; padding:0;">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

