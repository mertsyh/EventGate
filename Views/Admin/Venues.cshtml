@model List<EventDeneme.Models.venues>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Manage Venues";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h2 style="margin: 0; font-size: 24px; font-weight: 700; color: #111;">Manage Venues</h2>
    <a href="@Url.Action("CreateVenue", "Admin")" style="background: #ea2a33; color: white; padding: 10px 20px; border-radius: 8px; text-decoration: none; font-weight: 500; font-size: 14px; display: inline-flex; align-items: center; gap: 8px;">
        <span class="material-symbols-outlined" style="font-size: 18px;">add</span>
        Add Venue
    </a>
</div>

@if (Model.Any())
{
    <div style="background: white; border-radius: 12px; border: 1px solid #e5e7eb; overflow: hidden;">
        <div style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="background: #f9fafb; border-bottom: 2px solid #e5e7eb;">
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">ID</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">Name</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">Address</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">City</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">Has Seating</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="border-bottom: 1px solid #e5e7eb; transition: background 0.2s;" onmouseover="this.style.background='#f9fafb'" onmouseout="this.style.background='white'">
                            <td style="padding: 16px; color: #6b7280; font-size: 14px;">@item.id</td>
                            <td style="padding: 16px; color: #111; font-weight: 500; font-size: 14px;">@item.name</td>
                            <td style="padding: 16px; color: #6b7280; font-size: 14px;">@(item.address ?? "N/A")</td>
                            <td style="padding: 16px; color: #6b7280; font-size: 14px;">@(item.cities != null ? item.cities.name : "N/A")</td>
                            <td style="padding: 16px;">
                                <span style="display: inline-block; padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 500; @(item.has_seating ? "background: #d1fae5; color: #065f46;" : "background: #f3f4f6; color: #6b7280;")">
                                    @(item.has_seating ? "Yes" : "No")
                                </span>
                            </td>
                            <td style="padding: 16px;">
                                <div style="display: flex; gap: 8px;">
                                    <a href="@Url.Action("EditVenue", "Admin", new { id = item.id })" style="background: #3b82f6; color: white; padding: 6px 12px; border-radius: 6px; text-decoration: none; font-size: 13px; font-weight: 500;">Edit</a>
                                    @using (Html.BeginForm("DeleteVenue", "Admin", new { id = item.id }, FormMethod.Post, new { style = "display: inline;", onsubmit = "return confirm('Are you sure you want to delete this venue?');" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" style="background: #ef4444; color: white; padding: 6px 12px; border: none; border-radius: 6px; cursor: pointer; font-size: 13px; font-weight: 500;">Delete</button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div style="background: white; padding: 40px; border-radius: 12px; border: 1px solid #e5e7eb; text-align: center;">
        <p style="color: #6b7280; margin: 0;">No venues found.</p>
    </div>
}
