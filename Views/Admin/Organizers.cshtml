@model List<EventDeneme.Models.organizers>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Manage Organizers";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h2 style="margin: 0; font-size: 24px; font-weight: 700; color: #111;">Manage Organizers</h2>
    <a href="@Url.Action("CreateOrganizer", "Admin")" style="background: #ea2a33; color: white; padding: 10px 20px; border-radius: 8px; text-decoration: none; font-weight: 500; font-size: 14px; display: inline-flex; align-items: center; gap: 8px;">
        <span class="material-symbols-outlined" style="font-size: 18px;">add</span>
        Add Organizer
    </a>
</div>

@if (Model.Any(m => m.status != "deleted"))
{
    <div style="background: white; border-radius: 12px; border: 1px solid #e5e7eb; overflow: hidden;">
        <div style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="background: #f9fafb; border-bottom: 2px solid #e5e7eb;">
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">ID</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">Legal Name</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">Brand Name</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">Email</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">Status</th>
                        <th style="padding: 16px; text-align: left; font-weight: 600; color: #111; font-size: 14px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var status = item.status ?? "unknown";
                        if (status != "deleted")
                        {
                            <tr style="border-bottom: 1px solid #e5e7eb; transition: background 0.2s;" onmouseover="this.style.background='#f9fafb'" onmouseout="this.style.background='white'">
                                <td style="padding: 16px; color: #6b7280; font-size: 14px;">@item.id</td>
                                <td style="padding: 16px; color: #111; font-weight: 500; font-size: 14px;">@item.legal_name</td>
                                <td style="padding: 16px; color: #111; font-size: 14px;">@item.brand_name</td>
                                <td style="padding: 16px; color: #6b7280; font-size: 14px;">@item.contact_email</td>
                                <td style="padding: 16px;">
                                    <span style="display: inline-block; padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 500;
                                        @(status == "approved" ? "background: #d1fae5; color: #065f46;" : 
                                          status == "pending" ? "background: #fef3c7; color: #92400e;" : 
                                          status == "rejected" ? "background: #fee2e2; color: #991b1b;" : 
                                          "background: #f3f4f6; color: #6b7280;")">
                                        @status
                                    </span>
                                </td>
                                <td style="padding: 16px;">
                                    <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                                        <a href="@Url.Action("OrganizerDetails", "Admin", new { id = item.id })" style="background: #3b82f6; color: white; padding: 6px 12px; border-radius: 6px; text-decoration: none; font-size: 13px; font-weight: 500;">View</a>
                                        @if (status == "pending")
                                        {
                                            var rejectFormAttrs = new { @class = "confirm-form", style = "display: inline;", data_message = "Are you sure you want to reject this organizer?" };
                                            using (Html.BeginForm("ApproveOrganizer", "Admin", new { id = item.id }, FormMethod.Post, new { style = "display: inline;" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <button type="submit" style="background: #10b981; color: white; padding: 6px 12px; border: none; border-radius: 6px; cursor: pointer; font-size: 13px; font-weight: 500;">Approve</button>
                                            }
                                            using (Html.BeginForm("RejectOrganizer", "Admin", new { id = item.id }, FormMethod.Post, rejectFormAttrs))
                                            {
                                                @Html.AntiForgeryToken()
                                                <button type="submit" style="background: #ef4444; color: white; padding: 6px 12px; border: none; border-radius: 6px; cursor: pointer; font-size: 13px; font-weight: 500;">Reject</button>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div style="background: white; padding: 40px; border-radius: 12px; border: 1px solid #e5e7eb; text-align: center;">
        <p style="color: #6b7280; margin: 0;">No organizers found.</p>
    </div>
}

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var forms = document.querySelectorAll('.confirm-form');
        forms.forEach(function(form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                var message = form.getAttribute('data-message');
                var formElement = this;
                window.showConfirm(
                    message,
                    function() {
                        formElement.submit();
                    },
                    function() {
                    }
                );
            });
        });
    });
</script>
