@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create Event";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h2 style="margin: 0; font-size: 24px; font-weight: 700; color: #111;">Create Event</h2>
    <a href="@Url.Action("Events", "Admin")" style="background: #6b7280; color: white; padding: 10px 20px; border-radius: 8px; text-decoration: none; font-weight: 500; font-size: 14px;">Back</a>
</div>

@using (Html.BeginForm("CreateEvent", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="admin-body">
        <div class="form-group">
            <label>Title*</label>
            <input type="text" name="Title" required />
        </div>

        <div class="form-group">
            <label>Category*</label>
            <select name="categoryId" required>
                @foreach (var c in (IEnumerable<EventDeneme.Models.categories>)ViewBag.Categories)
                {
                    <option value="@c.id">@c.display_name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Organizer*</label>
            <select name="organizerId" required>
                @foreach (var o in (IEnumerable<EventDeneme.Models.organizers>)ViewBag.Organizers)
                {
                    <option value="@o.id">@o.brand_name (@o.legal_name)</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea name="Description" rows="4"></textarea>
        </div>

        <div class="form-group">
            <label>Language</label>
            <input type="text" name="Language" />
        </div>

        <div class="form-group">
            <label>Age Limit</label>
            <input type="text" name="AgeLimit" />
        </div>

        <div class="form-group">
            <label>Poster URL</label>
            <input type="text" name="PosterUrl" />
        </div>

        <button type="submit" style="background: #ea2a33; color: white; padding: 12px 24px; border: none; border-radius: 8px; font-weight: 500; font-size: 14px; cursor: pointer; margin-top: 8px;">Create Event</button>
    </div>
}
