@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>EventGate | Admin Login</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/register.css")">
</head>
<body>

    <div class="container">

        <div class="slider">
            <a href="/">
                <img class="headerlogo" src="@Url.Content("~/images/logo.png")" />
            </a>

            <div class="slide active" style="background-image: url('@Url.Content("~/images/sebnemferah.jpg")');"></div>
            <div class="slide" style="background-image: url('@Url.Content("~/images/cinema.jpg")');"></div>
            <div class="slide" style="background-image: url('@Url.Content("~/images/theater.jpg")');"></div>

            <div class="text">
                <h1>Admin panel for managing events.</h1>
            </div>
        </div>

        <div class="right">
            <div class="form-box">
                <h1>Admin Login</h1>

                @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                {
                    <label>Username*</label>
                    <input type="text" name="username" placeholder="Enter your username" required>

                    <label>Password*</label>
                    <input type="password" name="password" placeholder="Enter your password" required>

                    <button type="submit" class="btn-primary">Login</button>
                }

                @if (ViewBag.Error != null)
                {
                    <p style="color:red">@ViewBag.Error</p>
                }

                <div class="footer-text">
                    <a href="@Url.Action("Index", "Home")">Back to Home</a>
                </div>

            </div>
        </div>
    </div>

    <script>
        const slides = document.querySelectorAll('.slide');
        let index = 0;

        setInterval(() => {
            slides[index].classList.remove('active');
            index = (index + 1) % slides.length;
            slides[index].classList.add('active');
        }, 4000);
    </script>

</body>
</html>



