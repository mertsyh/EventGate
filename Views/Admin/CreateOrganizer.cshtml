@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create Organizer";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h2 style="margin: 0; font-size: 24px; font-weight: 700; color: #111;">Create Organizer</h2>
    <a href="@Url.Action("Organizers", "Admin")" style="background: #6b7280; color: white; padding: 10px 20px; border-radius: 8px; text-decoration: none; font-weight: 500; font-size: 14px;">Back</a>
</div>

@using (Html.BeginForm("CreateOrganizer", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="admin-body">
        <div class="form-group">
            <label>Legal Company Name*</label>
            <input type="text" name="LegalName" required />
        </div>

        <div class="form-group">
            <label>Brand Name*</label>
            <input type="text" name="BrandName" required />
        </div>

        <div class="form-group">
            <label>Contact Email*</label>
            <input type="email" name="ContactEmail" required />
        </div>

        <div class="form-group">
            <label>Contact Phone</label>
            <input type="tel" name="ContactPhone" />
        </div>

        <hr style="margin: 24px 0; border: none; border-top: 1px solid #e5e7eb;" />

        <h3 style="margin: 0 0 16px 0; font-size: 18px; font-weight: 600; color: #111;">User Account</h3>

        <div class="form-group">
            <label>Username*</label>
            <input type="text" name="Username" required />
        </div>

        <div class="form-group">
            <label>Password*</label>
            <input type="password" name="Password" required />
        </div>

        <button type="submit" style="background: #ea2a33; color: white; padding: 12px 24px; border: none; border-radius: 8px; font-weight: 500; font-size: 14px; cursor: pointer; margin-top: 8px;">Create Organizer</button>
    </div>
}
