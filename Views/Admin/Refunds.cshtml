@model List<EventDeneme.Models.refunds>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Refund Requests";
}

<h2>Refund Requests</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" style="background-color: #d4edda; color: #155724; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
        @TempData["Success"]
    </div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Processed At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.amount.ToString("C2")</td>
                    <td>@item.status</td>
                    <td>@(item.processed_at.HasValue ? item.processed_at.Value.ToString("dd MMM yyyy HH:mm") : "Pending")</td>
                    <td>
                        @if (item.status == "pending")
                        {
                            using (Html.BeginForm("ApproveRefund", "Admin", new { id = item.id }, FormMethod.Post, new { style = "display:inline;" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" style="background:none; border:none; color:green; cursor:pointer; text-decoration:underline; padding:0; margin-right:5px;">Approve</button>
                            }
                            using (Html.BeginForm("RejectRefund", "Admin", new { id = item.id }, FormMethod.Post, new { style = "display:inline;", onsubmit = "return confirm('Are you sure you want to reject this refund?');" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" style="background:none; border:none; color:#d22; cursor:pointer; text-decoration:underline; padding:0;">Reject</button>
                            }
                        }
                        else
                        {
                            <span style="color:#666;">@item.status</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No refund requests pending.</p>
}

