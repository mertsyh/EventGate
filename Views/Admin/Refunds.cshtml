@model List<EventDeneme.Models.refunds>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Refund Requests";
}

<h2>Refund Requests</h2>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Processed At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.amount.ToString("C2")</td>
                    <td>@item.status</td>
                    <td>@(item.processed_at.HasValue ? item.processed_at.Value.ToString("dd MMM yyyy HH:mm") : "Pending")</td>
                    <td>
                        <a href="#">Approve</a> | 
                        <a href="#">Reject</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No refund requests pending.</p>
}

