@model EventDeneme.Models.venues
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Venue";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h2 style="margin: 0; font-size: 24px; font-weight: 700; color: #111;">Edit Venue</h2>
    <a href="@Url.Action("Venues", "Admin")" style="background: #6b7280; color: white; padding: 10px 20px; border-radius: 8px; text-decoration: none; font-weight: 500; font-size: 14px;">Back</a>
</div>

@using (Html.BeginForm("EditVenue", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id)

    <div class="admin-body">
        <div class="form-group">
            @Html.LabelFor(m => m.name)
            @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.address)
            @Html.TextBoxFor(m => m.address, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>City</label>
            <select name="city_id" class="form-control">
                @foreach (var c in (IEnumerable<EventDeneme.Models.cities>)ViewBag.Cities)
                {
                    <option value="@c.id" @(c.id == Model.city_id ? "selected" : "")>@c.name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                @Html.CheckBoxFor(m => m.has_seating, new { style = "width: 18px; height: 18px; cursor: pointer;" })
                <span>Has seating</span>
            </label>
        </div>

        <button type="submit" style="background: #ea2a33; color: white; padding: 12px 24px; border: none; border-radius: 8px; font-weight: 500; font-size: 14px; cursor: pointer; margin-top: 8px;">Save</button>
    </div>
}
