@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create Venue";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h2 style="margin: 0; font-size: 24px; font-weight: 700; color: #111;">Create Venue</h2>
    <a href="@Url.Action("Venues", "Admin")" style="background: #6b7280; color: white; padding: 10px 20px; border-radius: 8px; text-decoration: none; font-weight: 500; font-size: 14px;">Back</a>
</div>

@using (Html.BeginForm("CreateVenue", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="admin-body">
        <div class="form-group">
            <label>Name*</label>
            <input type="text" name="Name" required />
        </div>

        <div class="form-group">
            <label>City*</label>
            <select name="cityId" required>
                @foreach (var c in (IEnumerable<EventDeneme.Models.cities>)ViewBag.Cities)
                {
                    <option value="@c.id">@c.name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Address</label>
            <input type="text" name="Address" />
        </div>

        <div class="form-group">
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="checkbox" name="hasSeating" value="true" style="width: 18px; height: 18px; cursor: pointer;" />
                <span>Has seating</span>
            </label>
        </div>

        <button type="submit" style="background: #ea2a33; color: white; padding: 12px 24px; border: none; border-radius: 8px; font-weight: 500; font-size: 14px; cursor: pointer; margin-top: 8px;">Create Venue</button>
    </div>
}
