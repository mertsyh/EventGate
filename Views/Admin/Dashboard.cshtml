@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Admin Dashboard";
}

<div class="container-fluid" style="padding: 20px;">
    <h2>Dashboard Overview</h2>
    
    <div class="row" style="display:flex; gap:20px; margin-top:20px;">
        <div class="col-md-3" style="background:#fff; padding:20px; border-radius:10px; box-shadow:0 2px 5px rgba(0,0,0,0.1); flex:1; text-align:center;">
            <h3>@ViewBag.TotalEvents</h3>
            <p>Total Events</p>
        </div>
        <div class="col-md-3" style="background:#fff; padding:20px; border-radius:10px; box-shadow:0 2px 5px rgba(0,0,0,0.1); flex:1; text-align:center;">
            <h3>@ViewBag.TotalUsers</h3>
            <p>Registered Users</p>
        </div>
        <div class="col-md-3" style="background:#fff; padding:20px; border-radius:10px; box-shadow:0 2px 5px rgba(0,0,0,0.1); flex:1; text-align:center;">
            <h3>@ViewBag.TotalOrganizers</h3>
            <p>Organizers</p>
        </div>
    </div>

    <h3 style="margin-top:40px;">Quick Actions</h3>
    <div style="margin-top:10px;">
        <a href="@Url.Action("Events", "Admin")" class="btn btn-primary">Manage Events</a>
        <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary">Manage Users</a>
        <a href="@Url.Action("Organizers", "Admin")" class="btn btn-info">Approve Organizers</a>
    </div>
</div>



