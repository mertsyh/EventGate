<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <title>Organizer Panel - EventGate</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/png" href="~/images/favicon.png" />

    
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

    
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#ea2a33",
                        "background-light": "#f8f6f6",
                        "background-dark": "#211111"
                    },
                    fontFamily: {
                        display: ["Be Vietnam Pro", "sans-serif"]
                    },
                    borderRadius: {
                        DEFAULT: "0.25rem",
                        lg: "0.5rem",
                        xl: "0.75rem",
                        full: "9999px"
                    }
                }
            }
        };
    </script>

    <style>
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        ::-webkit-scrollbar-track {
            background: transparent;
        }
        ::-webkit-scrollbar-thumb {
            background: #d1d5db;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #9ca3af;
        }
        .material-symbols-outlined {
            font-variation-settings:
                'FILL' 0,
                'wght' 400,
                'GRAD' 0,
                'opsz' 24;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        /* Match admin form spacing so create-event form looks aligned */
        .admin-body h2,
        .admin-body h3 {
            margin-bottom: 0.75rem;
        }

        .admin-body p {
            margin-bottom: 0.5rem;
        }

        .admin-body form {
            max-width: 720px;
        }

        .admin-body .form-group {
            margin-bottom: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.35rem;
        }

        .admin-body .form-group label {
            font-size: 0.9rem;
            font-weight: 600;
            color: #181111;
        }

        .admin-body input[type="text"],
        .admin-body input[type="email"],
        .admin-body input[type="tel"],
        .admin-body input[type="password"],
        .admin-body input[type="number"],
        .admin-body input[type="datetime-local"],
        .admin-body input[type="date"],
        .admin-body input[type="time"],
        .admin-body select,
        .admin-body textarea,
        .admin-body .form-control {
            width: 100%;
            padding: 0.55rem 0.8rem;
            border-radius: 0.5rem;
            border: 1px solid #d1d5db;
            font-size: 0.9rem;
            outline: none;
            box-sizing: border-box;
            font-family: inherit;
            line-height: 1.5;
            min-height: 40px;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .admin-body input[type="text"]:focus,
        .admin-body input[type="email"]:focus,
        .admin-body input[type="tel"]:focus,
        .admin-body input[type="password"]:focus,
        .admin-body input[type="number"]:focus,
        .admin-body input[type="datetime-local"]:focus,
        .admin-body input[type="date"]:focus,
        .admin-body input[type="time"]:focus,
        .admin-body select:focus,
        .admin-body textarea:focus,
        .admin-body .form-control:focus {
            border-color: #ea2a33;
            box-shadow: 0 0 0 1px rgba(234, 42, 51, 0.2);
        }

        .admin-body input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
            accent-color: #ea2a33;
        }

        .admin-body .form-group {
            margin-bottom: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .admin-body .form-group label {
            font-size: 0.9rem;
            font-weight: 600;
            color: #181111;
            display: block;
        }
    </style>

    @RenderSection("Styles", required: false)
    <style>
        .global-alert-container {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 10000;
            max-width: 600px;
            width: calc(100% - 40px);
            pointer-events: none;
        }

        .global-alert {
            background: white;
            border-radius: 12px;
            padding: 16px 20px;
            margin-bottom: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            display: flex;
            align-items: center;
            gap: 12px;
            pointer-events: auto;
            animation: slideDown 0.3s ease-out;
            border-left: 4px solid;
        }

        .global-alert.success {
            border-left-color: #10b981;
            background: linear-gradient(to right, #d1fae5 0%, white 10%);
        }

        .global-alert.error {
            border-left-color: #ef4444;
            background: linear-gradient(to right, #fee2e2 0%, white 10%);
        }

        .global-alert.warning {
            border-left-color: #f59e0b;
            background: linear-gradient(to right, #fef3c7 0%, white 10%);
        }

        .global-alert.info {
            border-left-color: #3b82f6;
            background: linear-gradient(to right, #dbeafe 0%, white 10%);
        }

        .global-alert-icon {
            font-size: 24px;
            flex-shrink: 0;
        }

        .global-alert.success .global-alert-icon {
            color: #10b981;
        }

        .global-alert.error .global-alert-icon {
            color: #ef4444;
        }

        .global-alert.warning .global-alert-icon {
            color: #f59e0b;
        }

        .global-alert.info .global-alert-icon {
            color: #3b82f6;
        }

        .global-alert-content {
            flex: 1;
            font-size: 14px;
            font-weight: 500;
            color: #111;
            line-height: 1.5;
        }

        .global-alert-close {
            background: none;
            border: none;
            color: #6b7280;
            cursor: pointer;
            font-size: 20px;
            padding: 0;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 4px;
            transition: all 0.2s;
            flex-shrink: 0;
        }

        .global-alert-close:hover {
            background: rgba(0, 0, 0, 0.05);
            color: #111;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 768px) {
            .global-alert-container {
                top: 10px;
                width: calc(100% - 20px);
            }

            .global-alert {
                padding: 12px 16px;
                font-size: 13px;
            }
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-gray-900 dark:text-gray-100 antialiased overflow-hidden">
    
    <div class="global-alert-container" id="globalAlertContainer"></div>
<div class="flex h-screen w-full">
    
    <aside class="flex w-64 flex-col border-r border-[#f4f0f0] bg-white dark:bg-[#1a1a1a] dark:border-[#333] transition-colors">
        <div class="flex h-full flex-col justify-between p-4">
            <div class="flex flex-col gap-6">
                
                <div class="flex gap-3 items-center px-2 py-1">
                    <a href="@Url.Action("Dashboard", "Organizer")" class="bg-center bg-no-repeat bg-contain rounded-full size-10 shrink-0 shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden flex items-center justify-center">
                        <img src="~/images/logo.png" alt="EventGate Organizer" class="max-h-full max-w-full" />
                    </a>
                    <div class="flex flex-col">
                        <h1 class="text-[#181111] dark:text-white text-base font-bold leading-tight">Organizer Panel</h1>
                        <p class="text-[#886364] dark:text-gray-400 text-xs font-medium">Manage your events</p>
                    </div>
                </div>

                
                <nav class="flex flex-col gap-1 mt-2">
                    <a href="@Url.Action("Dashboard", "Organizer")"
                       class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors group @(ViewBag.Title == "Organizer Dashboard" ? "bg-primary/10 dark:bg-primary/20" : "hover:bg-gray-50 dark:hover:bg-[#2a2a2a]")">
                        <span class="material-symbols-outlined @(ViewBag.Title == "Organizer Dashboard" ? "text-primary" : "text-[#886364] dark:text-gray-400 group-hover:text-primary")">dashboard</span>
                        <p class="text-sm font-medium @(ViewBag.Title == "Organizer Dashboard" ? "text-primary" : "text-[#181111] dark:text-gray-200")">Dashboard</p>
                    </a>
                    <a href="@Url.Action("CreateEvent", "Organizer")"
                       class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors group @(ViewBag.Title == "Create Event Request" ? "bg-primary/10 dark:bg-primary/20" : "hover:bg-gray-50 dark:hover:bg-[#2a2a2a]")">
                        <span class="material-symbols-outlined @(ViewBag.Title == "Create Event Request" ? "text-primary" : "text-[#886364] dark:text-gray-400 group-hover:text-primary")">playlist_add</span>
                        <p class="text-sm font-medium @(ViewBag.Title == "Create Event Request" ? "text-primary" : "text-[#181111] dark:text-gray-200")">Create Event Request</p>
                    </a>
                    <a href="@Url.Action("Applications", "Organizer")"
                       class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors group @(ViewBag.Title == "Organizer Applications" ? "bg-primary/10 dark:bg-primary/20" : "hover:bg-gray-50 dark:hover:bg-[#2a2a2a]")">
                        <span class="material-symbols-outlined @(ViewBag.Title == "Organizer Applications" ? "text-primary" : "text-[#886364] dark:text-gray-400 group-hover:text-primary")">assignment</span>
                        <p class="text-sm font-medium @(ViewBag.Title == "Organizer Applications" ? "text-primary" : "text-[#181111] dark:text-gray-200")">Applications</p>
                    </a>
                </nav>
            </div>

            <div class="px-2">
                <a href="@Url.Action("Logout", "Organizer")"
                   class="flex w-full items-center gap-3 px-3 py-2 text-[#886364] hover:text-red-600 dark:text-gray-400 dark:hover:text-red-400 transition-colors">
                    <span class="material-symbols-outlined text-lg">logout</span>
                    <span class="text-sm font-medium">Logout</span>
                </a>
            </div>
        </div>
    </aside>

    
    <main class="flex h-full flex-1 flex-col overflow-x-hidden overflow-y-auto relative">
        
        <header class="sticky top-0 z-20 flex items-center justify-between border-b border-[#f4f0f0] bg-white px-8 py-4 dark:bg-[#1a1a1a] dark:border-[#333]">
            <div class="flex items-center gap-4">
                <h2 class="text-[#181111] dark:text-white text-lg font-bold leading-tight">
                    @ViewBag.Title
                </h2>
            </div>
        </header>

        
        <div class="flex flex-1 flex-col p-6 lg:p-10 max-w-6xl mx-auto w-full">
            <div class="flex flex-col bg-white dark:bg-[#1a1a1a] rounded-xl shadow-sm border border-[#f4f0f0] dark:border-[#333] overflow-hidden">
                <div class="p-6 lg:p-8">
                    @RenderBody()
                </div>
            </div>
            <div class="h-12"></div>
        </div>
    </main>
</div>

@RenderSection("Scripts", required: false)
<script>
    (function() {
        function showAlert(message, type) {
            type = type || 'success';
            const container = document.getElementById('globalAlertContainer');
            if (!container) return;

            const alert = document.createElement('div');
            alert.className = 'global-alert ' + type;
            
            const icons = {
                success: 'fa-check-circle',
                error: 'fa-exclamation-circle',
                warning: 'fa-exclamation-triangle',
                info: 'fa-info-circle'
            };

            alert.innerHTML = `
                <i class="fas ${icons[type] || icons.success} global-alert-icon"></i>
                <div class="global-alert-content">${message}</div>
                <button class="global-alert-close" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            `;

            container.appendChild(alert);

            
            setTimeout(() => {
                if (alert.parentElement) {
                    alert.style.animation = 'slideDown 0.3s ease-out reverse';
                    setTimeout(() => alert.remove(), 300);
                }
            }, 5000);
        }

        
        @if (TempData["Success"] != null)
        {
            <text>showAlert('@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Success"].ToString()))', 'success');</text>
        }
        @if (TempData["Error"] != null)
        {
            <text>showAlert('@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Error"].ToString()))', 'error');</text>
        }
        @if (ViewBag.Error != null)
        {
            <text>showAlert('@Html.Raw(HttpUtility.JavaScriptStringEncode(ViewBag.Error.ToString()))', 'error');</text>
        }
    })();
</script>
</body>
</html>




