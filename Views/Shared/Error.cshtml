@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Error";
    var statusCode = ViewBag.StatusCode ?? 500;
    var errorMessage = ViewBag.ErrorMessage ?? "An error occurred while processing your request.";
}

<div style="min-height: 60vh; display: flex; align-items: center; justify-content: center; padding: 40px 20px;">
    <div style="text-align: center; max-width: 600px;">
        <div style="font-size: 120px; color: #e7004c; margin-bottom: 20px;">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h1 style="font-size: 48px; color: #111; margin-bottom: 16px;">@statusCode</h1>
        <h2 style="font-size: 24px; color: #666; margin-bottom: 24px;">@errorMessage</h2>
        <p style="color: #999; margin-bottom: 32px; line-height: 1.6;">
            We're sorry, but something went wrong. Please try again later or contact support if the problem persists.
        </p>
        <div style="display: flex; gap: 12px; justify-content: center; flex-wrap: wrap;">
            <a href="@Url.Action("Index", "Home")" style="background: #e7004c; color: white; padding: 12px 24px; border-radius: 8px; text-decoration: none; font-weight: bold; display: inline-block;">
                <i class="fas fa-home"></i> Go to Home
            </a>
            <a href="javascript:history.back()" style="background: #6b7280; color: white; padding: 12px 24px; border-radius: 8px; text-decoration: none; font-weight: bold; display: inline-block;">
                <i class="fas fa-arrow-left"></i> Go Back
            </a>
        </div>
    </div>
</div>

<style>
    @@media (max-width: 768px) {
        h1 {
            font-size: 36px !important;
        }
        h2 {
            font-size: 20px !important;
        }
        .fa-exclamation-triangle {
            font-size: 80px !important;
        }
    }
</style>
