<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard - EventGate</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/png" href="~/images/favicon.png" />
    @RenderSection("Styles", required: false)
    <style>
        .admin-container {
            display: flex;
            min-height: 100vh;
            margin-top: 20px;
        }
        .sidebar {
            width: 250px;
            background: #fff;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.05);
            border-radius: 0 16px 16px 0;
            margin-right: 20px;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
        .sidebar li {
            margin-bottom: 15px;
        }
        .sidebar a {
            text-decoration: none;
            color: #333;
            font-weight: 600;
            display: flex;
            align-items: center;
            padding: 10px;
            border-radius: 8px;
            transition: 0.3s;
        }
        .sidebar a:hover, .sidebar a.active {
            background: #d22;
            color: white;
        }
        .sidebar i {
            width: 25px;
            margin-right: 10px;
        }
        .admin-content {
            flex: 1;
            padding: 20px;
            background: #fff;
            border-radius: 16px;
            margin-right: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f8f8f8;
            font-weight: 600;
        }
        .btn-action {
            padding: 5px 10px;
            border-radius: 4px;
            color: white;
            text-decoration: none;
            font-size: 12px;
            margin-right: 5px;
        }
        .btn-edit { background: #007bff; }
        .btn-delete { background: #dc3545; }
        .badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 12px;
            color: white;
        }
        .bg-success { background: #28a745; }
        .bg-warning { background: #ffc107; color: black; }
        .bg-danger { background: #dc3545; }
    </style>
</head>
<body>
    <header>
        <a href="@Url.Action("Dashboard", "Admin")"><img src="~/images/logo.png" class="headerlogo" alt="Logo"></a>
        <ul>
            <li><a href="@Url.Action("Dashboard", "Admin")">ADMIN DASHBOARD</a></li>
        </ul>
        <div class="nav-right">
            <a href="@Url.Action("Logout", "Admin")" class="search-btn"><i class="fa fa-sign-out-alt"></i> Logout</a>
        </div>
    </header>

    <div class="admin-container">
        <div class="sidebar">
            <ul>
                <li><a href="@Url.Action("Dashboard", "Admin")" class="@(ViewBag.Title == "Dashboard" ? "active" : "")"><i class="fa fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="@Url.Action("Events", "Admin")" class="@(ViewBag.Title == "Events" ? "active" : "")"><i class="fa fa-calendar-alt"></i> Events</a></li>
                <li><a href="@Url.Action("Venues", "Admin")" class="@(ViewBag.Title == "Venues" ? "active" : "")"><i class="fa fa-map-marker-alt"></i> Venues</a></li>
                <li><a href="@Url.Action("Users", "Admin")" class="@(ViewBag.Title == "Users" ? "active" : "")"><i class="fa fa-users"></i> Users</a></li>
                <li><a href="@Url.Action("Tickets", "Admin")" class="@(ViewBag.Title == "Tickets" ? "active" : "")"><i class="fa fa-ticket-alt"></i> Tickets</a></li>
                <li><a href="@Url.Action("Refunds", "Admin")" class="@(ViewBag.Title == "Refunds" ? "active" : "")"><i class="fa fa-undo"></i> Refunds</a></li>
                <li><a href="@Url.Action("Organizers", "Admin")" class="@(ViewBag.Title == "Organizers" ? "active" : "")"><i class="fa fa-user-tie"></i> Organizers</a></li>
            </ul>
        </div>
        <div class="admin-content">
            @RenderBody()
        </div>
    </div>

    <script src="~/Scripts/site.js"></script>
</body>
</html>

