<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - EventGate</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />


    <link rel="stylesheet" href="~/Content/style.css">



    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


    <link rel="icon" type="image/png" href="~/images/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        .global-alert-container {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 10000;
            max-width: 600px;
            width: calc(100% - 40px);
            pointer-events: none;
        }

        .global-alert {
            background: white;
            border-radius: 12px;
            padding: 16px 20px;
            margin-bottom: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            display: flex;
            align-items: center;
            gap: 12px;
            pointer-events: auto;
            animation: slideDown 0.3s ease-out;
            border-left: 4px solid;
        }

        .global-alert.success {
            border-left-color: #10b981;
            background: linear-gradient(to right, #d1fae5 0%, white 10%);
        }

        .global-alert.error {
            border-left-color: #ef4444;
            background: linear-gradient(to right, #fee2e2 0%, white 10%);
        }

        .global-alert.warning {
            border-left-color: #f59e0b;
            background: linear-gradient(to right, #fef3c7 0%, white 10%);
        }

        .global-alert.info {
            border-left-color: #3b82f6;
            background: linear-gradient(to right, #dbeafe 0%, white 10%);
        }

        .global-alert-icon {
            font-size: 24px;
            flex-shrink: 0;
        }

        .global-alert.success .global-alert-icon {
            color: #10b981;
        }

        .global-alert.error .global-alert-icon {
            color: #ef4444;
        }

        .global-alert.warning .global-alert-icon {
            color: #f59e0b;
        }

        .global-alert.info .global-alert-icon {
            color: #3b82f6;
        }

        .global-alert-content {
            flex: 1;
            font-size: 14px;
            font-weight: 500;
            color: #111;
            line-height: 1.5;
        }

        .global-alert-close {
            background: none;
            border: none;
            color: #6b7280;
            cursor: pointer;
            font-size: 20px;
            padding: 0;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 4px;
            transition: all 0.2s;
            flex-shrink: 0;
        }

        .global-alert-close:hover {
            background: rgba(0, 0, 0, 0.05);
            color: #111;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 768px) {
            .global-alert-container {
                top: 10px;
                width: calc(100% - 20px);
            }

            .global-alert {
                padding: 12px 16px;
                font-size: 13px;
            }
        }

        .confirm-modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 10001;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: fadeIn 0.2s ease-out;
        }

        .confirm-modal {
            background: white;
            border-radius: 12px;
            padding: 24px;
            max-width: 400px;
            width: calc(100% - 40px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            animation: slideUp 0.3s ease-out;
        }

        .confirm-modal-title {
            font-size: 18px;
            font-weight: 600;
            color: #111;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .confirm-modal-title i {
            color: #f59e0b;
            font-size: 20px;
        }

        .confirm-modal-message {
            font-size: 14px;
            color: #666;
            margin-bottom: 24px;
            line-height: 1.5;
        }

        .confirm-modal-buttons {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
        }

        .confirm-modal-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .confirm-modal-btn-cancel {
            background: #f3f4f6;
            color: #374151;
        }

        .confirm-modal-btn-cancel:hover {
            background: #e5e7eb;
        }

        .confirm-modal-btn-confirm {
            background: #ea2a33;
            color: white;
        }

        .confirm-modal-btn-confirm:hover {
            background: #d11a23;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>

    
    <div class="global-alert-container" id="globalAlertContainer"></div>

    @Html.Partial("_Header")


    <main>
        @RenderBody()
    </main>


    @Html.Partial("_Footer")

    <script src="~/Scripts/site.js"></script>
    <script>
        (function() {
            window.showAlert = function(message, type) {
                type = type || 'success';
                const container = document.getElementById('globalAlertContainer');
                if (!container) return;

                const alert = document.createElement('div');
                alert.className = 'global-alert ' + type;
                
                const icons = {
                    success: 'fa-check-circle',
                    error: 'fa-exclamation-circle',
                    warning: 'fa-exclamation-triangle',
                    info: 'fa-info-circle'
                };

                alert.innerHTML = `
                    <i class="fas ${icons[type] || icons.success} global-alert-icon"></i>
                    <div class="global-alert-content">${message.replace(/\n/g, '<br>')}</div>
                    <button class="global-alert-close" onclick="this.parentElement.remove()">
                        <i class="fas fa-times"></i>
                    </button>
                `;

                container.appendChild(alert);

                
                setTimeout(() => {
                    if (alert.parentElement) {
                        alert.style.animation = 'slideDown 0.3s ease-out reverse';
                        setTimeout(() => alert.remove(), 300);
                    }
                }, 5000);
            };

            
            @if (TempData["Success"] != null)
            {
                <text>window.showAlert('@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Success"].ToString()))', 'success');</text>
            }
            @if (TempData["Error"] != null)
            {
                <text>window.showAlert('@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Error"].ToString()))', 'error');</text>
            }
            @if (ViewBag.Error != null)
            {
                <text>window.showAlert('@Html.Raw(HttpUtility.JavaScriptStringEncode(ViewBag.Error.ToString()))', 'error');</text>
            }

            window.showConfirm = function(message, onConfirm, onCancel) {
                const overlay = document.createElement('div');
                overlay.className = 'confirm-modal-overlay';
                overlay.innerHTML = `
                    <div class="confirm-modal">
                        <div class="confirm-modal-title">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span>Confirm Action</span>
                        </div>
                        <div class="confirm-modal-message">${message}</div>
                        <div class="confirm-modal-buttons">
                            <button class="confirm-modal-btn confirm-modal-btn-cancel">Cancel</button>
                            <button class="confirm-modal-btn confirm-modal-btn-confirm">Confirm</button>
                        </div>
                    </div>
                `;

                const cancelBtn = overlay.querySelector('.confirm-modal-btn-cancel');
                const confirmBtn = overlay.querySelector('.confirm-modal-btn-confirm');

                const close = function() {
                    overlay.style.animation = 'fadeIn 0.2s ease-out reverse';
                    setTimeout(() => overlay.remove(), 200);
                };

                cancelBtn.onclick = function() {
                    close();
                    if (onCancel) onCancel();
                };

                confirmBtn.onclick = function() {
                    close();
                    if (onConfirm) onConfirm();
                };

                overlay.onclick = function(e) {
                    if (e.target === overlay) {
                        close();
                        if (onCancel) onCancel();
                    }
                };

                document.body.appendChild(overlay);
            };
        })();
    </script>

</body>
</html>


