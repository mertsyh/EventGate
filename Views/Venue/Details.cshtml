@model EventDeneme.Models.venues
@{
    ViewBag.Title = Model.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding: 40px 20px;">
    <h1>@Model.name</h1>
    <p class="lead"><i class="fa-solid fa-location-dot"></i> @(Model.cities != null ? Model.cities.name : "")</p>
    <hr />
    
    <div class="venue-info">
        <h3>Address</h3>
        <p>@Model.address</p>
        
        <h3>Capacity</h3>
        <p>@Model.capacity</p>
        
        <!-- Map or Image could go here -->
    </div>

    <h3 style="margin-top: 40px;">Upcoming Events at this Venue</h3>
    <!-- Assuming performances link back to events -->
    <!-- This part requires more complex querying in controller ideally, but basic listing is fine for now -->
    <p>Check our events page to see what's playing here!</p>
    <a href="@Url.Action("Index", "Event")" class="btn btn-secondary">Browse Events</a>
</div>

