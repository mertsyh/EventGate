@{
    ViewBag.Title = "Payment Failed";
}

<div class="container" style="text-align: center; padding: 60px 20px;">
    <div style="font-size: 80px; color: #f44336; margin-bottom: 20px;">
        <i class="fas fa-times-circle"></i>
    </div>
    <h1>Payment Failed</h1>
    <p style="font-size: 1.2em; color: #666; margin: 20px 0;">An error occurred during your transaction. Please try again.</p>
    
    <a href="@Url.Action("Index", "Home")" style="display: inline-block; background-color: #333; color: white; padding: 10px 25px; border-radius: 25px; text-decoration: none;">Return to Home</a>
</div>



