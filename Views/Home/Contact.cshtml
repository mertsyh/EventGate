
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/Content/about.css">
    <link rel="stylesheet" href="~/Content/style.css">
}


<section class="contact-us-section">
    <div class="contact-container">
        <h1>Contact Us</h1>
        <p>We'd love to hear from you! Whether you have a question about an event, need help with your tickets, or just want to give us feedback, feel free to reach out.</p>

        <div class="contact-info-and-form">
            <div class="contact-info">
                <h2>Get in Touch</h2>
                <p><i class="fa-solid fa-map-marker-alt"></i> 123 Music Lane, Istanbul, Turkey</p>
                <p><i class="fa-solid fa-envelope"></i> contact@EventGate.com</p>
                <p><i class="fa-solid fa-phone"></i> +90 212 123 4567</p>

                <h2>Follow Us</h2>
                <div class="social-links">
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#"><i class="fa-brands fa-facebook"></i></a>
                </div>
            </div>

            <div class="contact-form">
                <h2>Send us a Message</h2>
                <form>
                    <input type="text" name="name" placeholder="Your Name" required>
                    <input type="email" name="email" placeholder="Your Email" required>
                    <textarea name="message" placeholder="Your Message" rows="5" required></textarea>
                    <button type="submit">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</section>

