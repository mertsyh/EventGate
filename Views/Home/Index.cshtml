@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using EventDeneme.Models

@model List<EventDeneme.Models.EventCardViewModel>

<section class="hero">
    <h1>Get Your Favorite Artist's Ticket Now!</h1>
    <p>Don't miss upcoming concerts - the best shows are right here üöÄ</p>

    <div class="search-area">
        <div class="search-box">
            <i class="fa-solid fa-location-dot"></i>
            <select id="homeCityId" name="CityId">
                <option value="">All Cities</option>
                @foreach (var city in ViewBag.cities)
                {
                    <option value="@city.id">@city.name</option>
                }
            </select>
        </div>

        <div class="search-box">
            <i class="fa-solid fa-ticket"></i>
            <select id="homeCategoryId" name="categoryId">
                <option value="">All Categories</option>
                @foreach (var category in ViewBag.categories)
                {
                    <option value="@category.id">@category.display_name</option>
                }
            </select>
        </div>

        <div class="search-box">
            <i class="fa-solid fa-map-pin"></i>
            <select id="homeVenueId" name="VenuesId">
                <option value="">All Venues</option>
                @foreach (var Venues in ViewBag.venues)
                {
                    <option value="@Venues.id">@Venues.name</option>
                }
            </select>
        </div>

        <div class="search-box">
            <i class="fa-solid fa-clock"></i>
            <input type="date" id="homeDate" name="date">
        </div>

        <button class="search-btn" id="homeSearchBtn">Search</button>
    </div>
</section>

<section id="maincontainer">
    <div class="carousel" mask style="--items:@Model.Count">

        @{
            int i = 0;
        }

        @foreach (var e in Model)
        {
            <article style="--i:@i;">
                <img src="@Url.Content(e.ImageUrl)" alt="@e.Title">

                <div class="ticket-content">
                    <h2>@e.Title</h2>
                    <p>@e.Venue</p>

                    <a href="@Url.Action("Details", "Event", new { id = e.EventId })">
                        Buy Ticket - ‚Ç∫@(e.Price ?? 0)+
                    </a>
                </div>
            </article>

            i++;
        }

    </div>
</section>

<section class="events-section">
    <h2>Time is Running Out!</h2>
    <p>Discover concerts and nearby events.</p>

    <div class="events-container">

        @foreach (var e in (List<EventCardViewModel>)ViewBag.LastWeekEvents)
        {
            <div class="event-card">
                <img src="@Url.Content(e.ImageUrl)" alt="@e.Title">

                <div class="event-info">

                    @{
                        bool hasDate = e.StartDate != null;
                        bool isPast = hasDate && e.StartDate.Value < DateTime.Now;
                        string timeLeft = "";
                        if (hasDate && !isPast)
                        {
                            var remaining = e.StartDate.Value - DateTime.Now;
                            timeLeft = $"{remaining.Days} Days";
                        }
                    }

                    @if (!isPast)
                    {
                        <span class="time-tag">
                            <i class="fa-regular fa-clock"></i> @timeLeft
                        </span>
                    }

                    <h3>@e.Title</h3>

                    <p>üìç @e.Venue</p>
                    <div class="price-row">
                        <span class="price">‚Ç∫@e.Price+</span>
                        @if (!isPast)
                        {
                            <a href="@Url.Action("Details", "Event", new { id = e.EventId })">Book Now</a>
                        }
                        else
                        {
                            <span class="ended-label">Event Ended</span>
                        }
                    </div>
                </div>
            </div>
        }

    </div>

    <div class="events-controls">
        <button id="prevEvent">
            <i class="fa-solid fa-chevron-left"></i>
        </button>
        <button id="nextEvent">
            <i class="fa-solid fa-chevron-right"></i>
        </button>
    </div>
</section>

<section class="steps-section">
    <div class="steps-container">

        <div class="steps-text">
            <h2>üöÄ Buy Your Ticket in 4 Easy Steps!</h2>
            <p>Joining the fun with EventGate is just a few steps away.</p>
            <button class="steps-btn"
                    onclick="location.href='/Event'">
                Buy Ticket <i class="fa-solid fa-arrow-right"></i>
            </button>

        </div>

        <div class="steps-flow">

            <div class="step-item">
                <img src="@Url.Content("~/images/eventicon.png")">
                <h3>Choose Event</h3>
                <p>Select your favorite concert, theater, or movie.</p>
            </div>

            <div class="step-line"></div>

            <div class="step-item">
                <img src="@Url.Content("~/images/dateicon.png")">
                <h3>Pick Date & Time</h3>
                <p>Choose your suitable day, add it to your calendar, and plan ahead.</p>
            </div>

            <div class="step-line"></div>

            <div class="step-item">
                <img src="@Url.Content("~/images/paymenticon.png")">
                <h3>Make Payment</h3>
                <p>Complete your transaction securely within seconds.</p>
            </div>

            <div class="step-line"></div>

            <div class="step-item">
                <img src="@Url.Content("~/images/ticketicon.png")">
                <h3>Download Ticket</h3>
                <p>Download your PDF ticket and get ready for the event!</p>
            </div>

        </div>

    </div>
</section>

<section class="campaigns">
    <h2>üî• Current Promotions</h2>
    <div class="campaign-list">
        <div class="campaign-item">üéâ Buy 3 Tickets, Get 1 Free!</div>
        <div class="campaign-item">üéì 20% Student Discount</div>
        <div class="campaign-item">üíé 15% Off VIP Seats</div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#homeSearchBtn').on('click', function () {
            performSearch();
        });

        $('#homeCityId, #homeCategoryId, #homeVenueId, #homeDate').on('keypress', function (e) {
            if (e.which === 13) {
                performSearch();
            }
        });

        function performSearch() {
            var cityId = $('#homeCityId').val() || '';
            var categoryId = $('#homeCategoryId').val() || '';
            var venueId = $('#homeVenueId').val() || '';
            var date = $('#homeDate').val() || '';

            var url = '@Url.Action("Search", "Event")';
            var params = [];

            if (cityId) params.push('cityId=' + encodeURIComponent(cityId));
            if (categoryId) params.push('categoryId=' + encodeURIComponent(categoryId));
            if (venueId) params.push('venueId=' + encodeURIComponent(venueId));
            if (date) params.push('date=' + encodeURIComponent(date));

            if (params.length > 0) {
                url += '?' + params.join('&');
            }

            window.location.href = url;
        }
    });
 
    const container = document.querySelector('.events-container');
    document.getElementById('nextEvent').addEventListener('click', () => {
        container.scrollLeft += 300;
    });
    document.getElementById('prevEvent').addEventListener('click', () => {
        container.scrollLeft -= 300;
    });




</script>
