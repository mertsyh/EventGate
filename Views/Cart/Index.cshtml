@model EventDeneme.Models.CartViewModel
@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .cart-container {
        padding: 40px 20px;
        max-width: 95%;
        min-height: 70vh;
    }

    .empty-cart {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        min-height: 60vh;
        margin:0px;
    }

        .empty-cart i {
            font-size: 64px;
            color: #ccc;
            margin-bottom: 20px;
        }

        .empty-cart h2 {
            color: #666;
            margin-bottom: 10px;
        }

        .empty-cart p {
            color: #999;
            margin-bottom: 30px;
        }

    .browse-btn {
        background-color: #dd2222;
        color: white;
        padding: 12px 30px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
    }

    .cart-layout {
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
    }

    .cart-items {
        flex: 1;
        min-width: 300px;
    }

    .cart-item {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        display: flex;
        gap: 20px;
    }

        .cart-item img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 8px;
        }

    .image-placeholder {
        width: 120px;
        height: 120px;
        background: #f3f4f6;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .image-placeholder i {
            font-size: 32px;
            color: #ccc;
        }

    .cart-item-details h3 {
        margin: 0 0 10px;
        font-size: 18px;
        color: #111;
    }

    .cart-item-details p {
        margin: 5px 0;
        color: #666;
        font-size: 14px;
    }

    .cart-row {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-top: 15px;
    }

    .quantity-input {
        width: 60px;
        padding: 6px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        text-align: center;
    }

    .item-subtotal {
        left: 20px;
        font-size: 18px;
        font-weight: bold;
        color: #d22;
    }

    .remove-item-btn {
        margin-top: 10px;
        background: none;
        border: none;
        color: #dc2626;
        cursor: pointer;
        font-size: 14px;
        padding: 0;
    }

    .summary {
        width: 350px;
        flex-shrink: 0;
    }

    .summary-box {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 24px;
        position: sticky;
        top: 20px;
    }

        .summary-box h2 {
            margin-bottom: 20px;
            font-size: 20px;
            color: #111;
        }

    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .summary-total {
        font-size: 24px;
        font-weight: bold;
        color: #d22;
    }

    .checkout-btn {
        width: 100%;
        background-color: #d22;
        color: white;
        padding: 14px;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        font-size: 16px;
        cursor: pointer;
        transition:1s ease;
    }
    .checkout-btn:hover{
     background-color:#666;
     border-radius:20px;
    }

    .continue-link {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #666;
        text-decoration: none;
        font-size: 14px;
    }

    .checkout-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        animation: fadeIn 0.3s ease-out;
    }

    .checkout-modal {
        background: white;
        border-radius: 16px;
        padding: 32px;
        max-width: 500px;
        width: 90%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        animation: slideUp 0.3s ease-out;
    }

    .checkout-modal-title {
        font-size: 24px;
        font-weight: 700;
        color: #111;
        margin-bottom: 16px;
        text-align: center;
    }

    .checkout-modal-message {
        font-size: 16px;
        color: #6b7280;
        margin-bottom: 24px;
        text-align: center;
        line-height: 1.6;
    }

    .checkout-modal-buttons {
        display: flex;
        gap: 12px;
        flex-direction: column;
    }

    .checkout-modal-btn {
        padding: 14px 24px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        width: 100%;
    }

    .checkout-modal-btn-login {
        background: #d22;
        color: white;
    }

    .checkout-modal-btn-login:hover {
        background: #b11;
    }

    .checkout-modal-btn-guest {
        background: #f3f4f6;
        color: #111;
        border: 2px solid #e5e7eb;
    }

    .checkout-modal-btn-guest:hover {
        background: #e5e7eb;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container cart-container">

    @if (Model.Items == null || !Model.Items.Any())
    {
        <div class="empty-cart">
            <i class="fa-solid fa-cart-shopping"></i>
            <h2>Your cart is empty</h2>
            <p>Add some tickets to your cart to get started.</p>
            <a href="@Url.Action("Index", "Event")" class="browse-btn">Browse Events</a>
        </div>
    }
    else
    {
        <h1>Shopping Cart</h1>

        <div class="cart-layout">
            <div class="cart-items">
                @foreach (var item in Model.Items)
                {
                    <div class="cart-item">
                        @if (!string.IsNullOrEmpty(item.EventImageUrl))
                        {
                            <img src="@Url.Content(item.EventImageUrl)" alt="@item.EventTitle" />
                        }
                        else
                        {
                            <div class="image-placeholder">
                                <i class="fa-solid fa-image"></i>
                            </div>
                        }

                        <div class="cart-item-details">
                            <h3>@item.EventTitle</h3>

                            @if (item.EventDate.HasValue)
                            {
                                <p><i class="fa-solid fa-calendar"></i> @item.EventDate.Value.ToString("MMMM dd, yyyy hh:mm tt")</p>
                            }

                            @if (!string.IsNullOrEmpty(item.VenueName))
                            {
                                <p><i class="fa-solid fa-map-marker-alt"></i> @item.VenueName@(!string.IsNullOrEmpty(item.CityName) ? ", " + item.CityName : "")</p>
                            }

                            <div class="cart-row">
                                <input type="number" class="quantity-input" data-cart-item-id="@item.CartItemId" value="@item.Quantity" min="1" />
                                <span class="item-subtotal" data-cart-item-id="@item.CartItemId">@item.Subtotal.ToString("N2") ₺</span>
                            </div>

                            <button class="remove-item-btn" data-cart-item-id="@item.CartItemId">
                                <i class="fa-solid fa-trash"></i> Remove
                            </button>
                        </div>
                    </div>
                }
            </div>

            <div class="summary">
                <div class="summary-box">
                    <h2>Order Summary</h2>

                    <div class="summary-row">
                        <span>Items (@Model.TotalItems)</span>
                        <span>@Model.TotalAmount.ToString("N2") ₺</span>
                    </div>

                    <div class="summary-row">
                        <strong>Total</strong>
                        <span class="summary-total" id="cart-total">@Model.TotalAmount.ToString("N2") ₺</span>
                    </div>

                    <form id="checkoutForm" action="@Url.Action("Checkout", "Cart")" method="post">
                        @Html.AntiForgeryToken()
                        <button type="button" class="checkout-btn" id="proceedCheckoutBtn">Proceed to Checkout</button>
                    </form>

                    <a href="@Url.Action("Index", "Event")" class="continue-link">
                        <i class="fa-solid fa-arrow-left"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        
        $('.quantity-input').on('change', function() {
            var cartItemId = $(this).data('cart-item-id');
            var quantity = parseInt($(this).val());

            if (quantity < 1) {
                $(this).val(1);
                quantity = 1;
            }

            $.ajax({
                url: '@Url.Action("UpdateQuantity", "Cart")',
                type: 'POST',
                data: {
                    cartItemId: cartItemId,
                    quantity: quantity
                },
                success: function(response) {
                    if (response.success) {
                        
                        $('.item-subtotal[data-cart-item-id="' + cartItemId + '"]').text(response.subtotal.toFixed(2) + ' ₺');
                        
                        $('#cart-total').text(response.totalAmount.toFixed(2) + ' ₺');
                        
                        $('#cart-count').text(response.itemCount || 0);
                    } else {
                        window.showAlert(response.message, 'error');
                    }
                },
                error: function() {
                    window.showAlert('Error updating quantity. Please try again.', 'error');
                }
            });
        });

        
        $('.remove-item-btn').on('click', function() {
            var cartItemId = $(this).data('cart-item-id');
            var $item = $(this).closest('.cart-item');
            var self = this;

            window.showConfirm(
                'Are you sure you want to remove this item from your cart?',
                function() {
                    removeItem(cartItemId, $item);
                },
                function() {
                }
            );
        });

        function removeItem(cartItemId, $item) {
            $.ajax({
                url: '@Url.Action("RemoveFromCart", "Cart")',
                type: 'POST',
                data: {
                    cartItemId: cartItemId
                },
                success: function(response) {
                    if (response.success) {
                        $item.fadeOut(300, function() {
                            $(this).remove();
                            
                            if ($('.cart-item').length === 0) {
                                location.reload();
                            }
                        });
                        
                        $('#cart-count').text(response.itemCount || 0);
                        window.showAlert('Item removed from cart successfully.', 'success');
                    } else {
                        window.showAlert(response.message, 'error');
                    }
                },
                error: function() {
                    window.showAlert('Error removing item. Please try again.', 'error');
                }
            });
        }

        // Checkout butonu için kontrol
        $('#proceedCheckoutBtn').on('click', function() {
            var isLoggedIn = @(Session["UserID"] != null ? "true" : "false");
            
            if (isLoggedIn) {
                // Giriş yapılmışsa direkt checkout'a git
                $('#checkoutForm').submit();
            } else {
                // Giriş yapılmamışsa modal göster
                showCheckoutModal();
            }
        });

        function showCheckoutModal() {
            const overlay = document.createElement('div');
            overlay.className = 'checkout-modal-overlay';
            overlay.innerHTML = `
                <div class="checkout-modal">
                    <div class="checkout-modal-title">Continue as Guest or Sign In?</div>
                    <div class="checkout-modal-message">
                        Would you like to sign in to save your information, or continue as a guest?
                    </div>
                    <div class="checkout-modal-buttons">
                        <button type="button" class="checkout-modal-btn checkout-modal-btn-login" data-action="login">
                            Sign In
                        </button>
                        <button type="button" class="checkout-modal-btn checkout-modal-btn-guest" data-action="guest">
                            Continue as Guest
                        </button>
                    </div>
                </div>
            `;

            document.body.appendChild(overlay);

            // Button event binding
            const loginBtn = overlay.querySelector('[data-action="login"]');
            const guestBtn = overlay.querySelector('[data-action="guest"]');
            if (loginBtn) {
                loginBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    proceedToLogin();
                    closeModal(overlay);
                });
            }
            if (guestBtn) {
                guestBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    proceedAsGuest();
                    closeModal(overlay);
                });
            }

            // Overlay'e tıklandığında modal'ı kapat
            overlay.addEventListener('click', function(e) {
                if (e.target === overlay) {
                    closeModal(overlay);
                }
            });
        }

        function closeModal(overlay) {
            overlay.style.animation = 'fadeIn 0.2s ease-out reverse';
            setTimeout(() => overlay.remove(), 200);
        }

        function proceedToLogin() {
            // Sepeti korumak için returnUrl ekle
            var returnUrl = '@Url.Action("Index", "Cart")';
            window.location.href = '@Url.Action("Signin", "Register")?returnUrl=' + encodeURIComponent(returnUrl);
        }

        function proceedAsGuest() {
            // Misafir olarak devam et
            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ProceedAsGuest", "Cart")';
            
            var token = $('input[name="__RequestVerificationToken"]').val();
            var tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = token;
            form.appendChild(tokenInput);
            
            document.body.appendChild(form);
            form.submit();
        }
    });
</script>
